{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"newLine": "LF",
		"outDir": "./module/",
		"target": "es2018",
		"esModuleInterop": true,
	    "forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"erasableSyntaxOnly": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*"]
}
